{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Connection",
  "definitions": {
    "DBConnection": {
      "properties": {
        "hosts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ports": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "user": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "schema": {
          "type": "string"
        },
        "params": {
          "type": "object",
          "default": {}
        }
      },
      "required": ["ports", "user", "password", "hosts"],
      "type": "object"
    }
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "params": {
      "type": "object",
      "oneOf": [{ "$ref": "#/definitions/DBConnection" }]
    },
    "disabled": {
      "type": "boolean",
      "default": false
    }
  },
  "required": ["name", "type", "params"]
}
